{
  "templateId": "deposit-statement",
  "version": "2.0.0",
  "document": {
    "title": "出納帳および預り金報告書",
    "paper": "A4",
    "orientation": "portrait",
    "margin": {
      "top": 20,
      "right": 20,
      "bottom": 20,
      "left": 20
    }
  },
  "header": {
    "rows": [
      {
        "type": "text",
        "value": "{{statement.month}}分　出納帳および預り金報告書",
        "align": "center",
        "fontSize": 16,
        "bold": true,
        "marginBottom": 10
      },
      {
        "type": "text",
        "value": "{{facility.name}}",
        "align": "right",
        "fontSize": 12
      }
    ]
  },
  "tables": [
    {
      "id": "deposit-details",
      "columns": [
        { "key": "category", "label": "種別", "width": 12 },
        { "key": "userName", "label": "利用者名", "width": 18 },
        { "key": "date", "label": "日付", "width": 10 },
        { "key": "label", "label": "摘要", "width": 20 },
        { "key": "payee", "label": "支払先", "width": 20 },
        { "key": "income", "label": "入金", "width": 10, "align": "right" },
        { "key": "expense", "label": "出金", "width": 10, "align": "right" }
      ],
      "dataSource": "transactions"
    }
  ],
  "summary": {
    "rows": [
      {
        "label": "合計",
        "income": "{{summary.totalIncome}}",
        "expense": "{{summary.totalExpense}}"
      }
    ]
  }
}
